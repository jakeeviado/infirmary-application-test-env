{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "refactoring",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "New Feature(s) ðŸš€"
            },
            {
              "type": "fix",
              "section": "Bug Fix(es) ðŸ›ï¸"
            },
            {
              "type": "docs",
              "section": "Documentation Changes ðŸ“"
            },
            {
              "type": "refactor",
              "section": "Code Refactor ðŸ’…"
            },
            {
              "type": "test",
              "section": "Tests ðŸ“¡ï¸"
            },
            {
              "type": "perf",
              "section": "Performance Improvement(s) ðŸš„ï¸"
            },
            {
              "type": "build",
              "section": "Build system ðŸ› ï¸"
            },
            {
              "type": "refactoring",
              "section": "Refactoring \uD83D\uDEE0"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mvn versions:set -DnewVersion=\"${nextRelease.version}\" && echo \"NEXT_VERSION=${nextRelease.version}, verifyReleaseCmd can also be used instead of prepareCmd\" >> build.env"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Semantic Versioning Changelog"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "pom.xml",
          "service/pom.xml",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ],
  "branches": [
    "master", {"name": "beta", "prerelease": true}
  ]
}